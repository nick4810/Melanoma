<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.capstone.nick.melanoma.ViewProfile">
    <!-- The main content view -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.capstone.nick.melanoma.ViewProfile">

        <EditText
            android:id="@+id/editFname"
            android:layout_width="357dp"
            android:layout_height="43dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="First Name"
            android:textColor="#a3a8af"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="70dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp" />

        <EditText
            android:id="@+id/editLname"
            android:layout_width="358dp"
            android:layout_height="45dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Last Name"
            android:textColor="#a3a8af"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintRight_toRightOf="@+id/editFname"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/editFname"
            app:layout_constraintLeft_toLeftOf="@+id/editFname"
            app:layout_constraintHorizontal_bias="0.0" />

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="359dp"
            android:layout_height="46dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Email"
            android:textColor="#a3a8af"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/editLname"
            android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/editLname"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/editLname" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="Profile"
            android:textColor="#000000"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintLeft_creator="1"
            android:id="@+id/textView" />

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline2"
            app:layout_constraintGuide_begin="20dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="20dp" />



        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="DOB (placeholder)"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/editEmail"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="138dp"
            app:layout_constraintLeft_toLeftOf="@+id/editEmail" />

        <RadioButton
            android:id="@+id/toggleMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="17dp"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/editEmail"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="16dp" />

        <RadioButton
            android:id="@+id/toggleFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            android:layout_marginStart="109dp"
            android:layout_marginEnd="108dp"
            app:layout_constraintRight_toRightOf="@+id/editEmail"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/editEmail"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toRightOf="@+id/toggleMale"
            app:layout_constraintHorizontal_bias="0.506" />


    </android.support.constraint.ConstraintLayout>
    <!-- Put what you want as your normal screen in here, you can also choose for a linear layout or any other layout, whatever you prefer -->

    <!-- The navigation drawer -->
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffeeeeee"/>
</android.support.v4.widget.DrawerLayout>



